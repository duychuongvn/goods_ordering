<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="autoIncrement" value="true"/>

    <!--
        Added the entity Payment.
    -->
    <changeSet id="20190629161856-1" author="jhipster">
        <createTable tableName="payment">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="payment_code" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="payment_status" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="received_amount" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>

            <column name="paid_time" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="bank_account" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="bank_account_holder" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="bank_info" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="created_at" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="last_updated_at" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="created_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="last_updated_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

        <dropDefaultValue tableName="payment" columnName="paid_time" columnDataType="datetime"/>
        <dropDefaultValue tableName="payment" columnName="created_at" columnDataType="datetime"/>
        <dropDefaultValue tableName="payment" columnName="last_updated_at" columnDataType="datetime"/>
    </changeSet>
    <changeSet id="20190629161856-1-relations" author="jhipster">

    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
